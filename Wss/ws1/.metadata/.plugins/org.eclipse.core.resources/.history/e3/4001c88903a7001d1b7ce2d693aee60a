package MockExam;

import java.util.Scanner;

public class Ejercicio1 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int entrada = 1;
		while (entrada != 0 || entrada > 0) {
			System.out.println("Introduce el numero de entradas");
			entrada = Integer.valueOf(sc.nextLine());
			System.out.println("Día de la semana (L,M,X,J,V,S,D)");
			String dia = String.valueOf(sc.nextLine());
			while (dia != "L" || dia != "M" || dia != "X" || dia != "J" || dia != "V" || dia != "S" || dia != "D") {
				System.out.println("Día de la semana (L,M,X,J,V,S,D)");
				dia = String.valueOf(sc.nextLine());
			}
			System.out.println("¿Tienes tarjeta CineJacaranda(S/N)?:");
			String tarjeta = String.valueOf(sc.nextLine());

			while (tarjeta != "S" || dia != "N") {
				System.out.println("¿Tienes tarjeta CineJacaranda(S/N)?:");
				tarjeta = String.valueOf(sc.nextLine());
			}
		}

	}
}
